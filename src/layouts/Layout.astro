<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="../assets/" />
		<meta name="generator" content={Astro.generator} />
		<title>Astro Basics</title>

		<link 
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" 
      rel="stylesheet" 
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" 
      crossorigin="anonymous"
    />

	</head>
	<body class="overflow-x-hidden">
		<slot />
		<script 
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" 
      integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" 
      crossorigin="anonymous">
    </script>
		<script>
			document.addEventListener("DOMContentLoaded", () => {
				
				const BASE_URL = "https://cement-design.doodrix.com/";

				const elements = document.querySelectorAll("[src], [href]")

				elements.forEach(el => {
					if (el.hasAttribute("src")) {
						const src = el.getAttribute("src");

						if (src.startsWith("/web") || src.startsWith("/shop")) {
							el.setAttribute("src", BASE_URL + src.replace(/^\//, ""));
						}
					}

					if (el.hasAttribute("href")) {
						const href = el.getAttribute("href");

						if (href.startsWith("/web") || href.startsWith("/shop")) {
							el.setAttribute("href", BASE_URL + href.replace(/^\//, ""));
						}
					}
				});

			});
		</script>
	</body>
</html>

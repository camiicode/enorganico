<script>
  document.addEventListener("DOMContentLoaded", () => {
    const images = [
      "https://cement-design.doodrix.com/web/image/26590-48012c3a/gallery-1.De961Kjz.webp",
      "https://cement-design.doodrix.com/web/image/26592-a388652c/gallery-2.BQhaarW8.webp",
      "https://cement-design.doodrix.com/web/image/26594-ffc8834d/gallery-3.BmrbLje7.webp",
      "https://cement-design.doodrix.com/web/image/26591-c5c1c0e3/gallery-4.CuSTZNuZ.webp",
      "https://cement-design.doodrix.com/web/image/26593-644f8488/gallery-5.BJ2c1B2C.webp",
      "https://cement-design.doodrix.com/web/image/26589-4470b069/gallery-6.C0cvvKk6.webp",
    ];

    // Mezclar aleatoriamente
    images.sort(() => Math.random() - 0.5);
    const shuffled = images.slice(0, 7);

    const section = document.getElementById("gallery");

    shuffled.forEach((img, i) => {
      let top, left;
      do {
        top = Math.random() * 90;
        left = Math.random() * 90;
      } while (top > 25 && top < 70 && left > 30 && left < 70);

      const el = document.createElement("img");
      el.src = img;
      el.alt = `Gallery Image ${i + 1}`;
      el.className = "enorganico-gallery__image absolute max-w-[400px] max-h-[400px] object-cover object-center transition-all duration-500 d-block p-3 bg-white";
      el.style.top = `${top}%`;
      el.style.left = `${left}%`;

      section.appendChild(el);
    });
  });
</script>

